<resources>
    
    <style name="AppThemeDark" parent="@android:style/Theme.DeviceDefault">
		<item name="de.ankri:switchStyle">@style/switch_dark</item>
	</style>

    <style name="AppThemeLight" parent="@android:style/Theme.DeviceDefault.Light">
		<item name="de.ankri:switchStyle">@style/switch_light</item>
	</style>
	
	<style name="switch_dark">
	    <item name="@attr/colorChecked">#FFFFFF</item>
	    <item name="@attr/colorUnChecked">#808080</item>
	    <item name="@attr/backgroundDrawable">@drawable/switch_bg_holo_dark</item>
	    <item name="@attr/switchDrawable">@drawable/switch_thumb_activated_holo_dark</item>
	</style>

	<style name="switch_light">
	    <item name="@attr/colorChecked">#FFFFFF</item>
	    <item name="@attr/colorUnChecked">#181818</item>
	    <item name="@attr/backgroundDrawable">@drawable/switch_bg_holo_light</item>
	    <item name="@attr/switchDrawable">@drawable/switch_thumb_activated_holo_light</item>
	</style>
	
    
</resources>